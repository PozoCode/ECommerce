@model IEnumerable<NegocioModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card border mt-2">
            <div class="card-header">
                <h3><strong>Lista de negocios</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-striped" id="tablaUsuarios" width="100%" cellspacing="0">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var negocio in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => negocio.NegocioId)</td>
                                    <td>@Html.DisplayFor(m => negocio.Nombre)</td>
                                    <td>@Html.DisplayFor(m => negocio.Descripcion)</td>
                                    <td>@Html.DisplayFor(m => negocio.Estado)</td>
                                    <td>
                                        <a class="btn btn-warning" title="Editar" asp-action="Edit" asp-route-id="@negocio.NegocioId"><i class="fa-solid fa-user-pen"></i></a>
                                        <a class="btn btn-info" title="Ver detalle" asp-action="Detail" asp-route-id="@negocio.NegocioId"><i class="fas fa-eye"></i></a>
                                        <a class="btn btn-danger" title="Eliminar" asp-action="Delete" asp-route-id="@negocio.NegocioId"><i class="far fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>

